<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="183dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="183dp"
                    android:text="B&amp;N"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="184dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="111dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="112dp"
                    android:gravity="center"
                    android:text="We help out people to reach to people when the need arises"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="205dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center"
                    android:text="SIGN UP"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="207dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="18dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="loginUser"
                    android:text="LOG IN"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="207dp"
                    android:layout_height="3dp"
                    android:layout_marginEnd="204dp"
                    android:layout_marginRight="204dp"
                    android:background="#9503A9F4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="336dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#03A9F4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="336dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#03A9F4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText2" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="336dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#03A9F4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/personalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="#4D2196F3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText6">

                    <EditText
                        android:id="@+id/editText7"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="99dp"
                        android:layout_marginLeft="99dp"
                        android:layout_marginTop="76dp"
                        android:layout_marginEnd="99dp"
                        android:layout_marginRight="99dp"
                        android:background="@drawable/back"
                        android:ems="10"
                        android:hint="DOB- dd/mm/yyyy"
                        android:inputType="date"
                        android:paddingLeft="20dp"
                        android:textColorHint="#2196F3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textView2" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="119dp"
                        android:layout_marginRight="119dp"
                        android:gravity="center"
                        android:text="Personal Information"
                        android:textColor="#077DB4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="99dp"
                        android:layout_marginLeft="99dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="99dp"
                        android:layout_marginRight="99dp"
                        android:background="@drawable/back"
                        android:ems="10"
                        android:hint="Country"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColorHint="#2196F3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText7" />
                    <EditText
                        android:id="@+id/editText9"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="99dp"
                        android:layout_marginLeft="99dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="99dp"
                        android:layout_marginRight="99dp"
                        android:background="@drawable/back"
                        android:ems="10"
                        android:hint="State"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColorHint="#2196F3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText8" />
                    <EditText
                        android:id="@+id/editText10"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="99dp"
                        android:layout_marginLeft="99dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="99dp"
                        android:layout_marginRight="99dp"
                        android:background="@drawable/back"
                        android:ems="10"
                        android:hint="City"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColorHint="#2196F3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText9" />
                    <EditText
                        android:id="@+id/editText11"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="99dp"
                        android:layout_marginLeft="99dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="99dp"
                        android:layout_marginRight="99dp"
                        android:background="@drawable/back"
                        android:ems="10"
                        android:hint="Street"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColorHint="#2196F3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText10" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="45dp"
                        android:background="#03A9F4"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="userDashboard"
                        android:text="Sign in"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText11" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>